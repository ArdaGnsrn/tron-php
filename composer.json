{
    "name": "ardagnsrn/tron-php",
    "description": "This is my package tron-php",
    "keywords": [
        "ArdaGnsrn",
        "tron-php"
    ],
    "homepage": "https://github.com/ardagnsrn/tron-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Arda GUNSUREN",
            "email": "ardagunsuren@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-bcmath": "*",
        "guzzlehttp/guzzle": "^7.9",
        "kornrunner/secp256k1": "^0.3.0",
        "simplito/elliptic-php": "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "ArdaGnsrn\\Tron\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArdaGnsrn\\Tron\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
